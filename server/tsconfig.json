{
  "compilerOptions": {
    "module": "NodeNext",              
    "moduleResolution": "NodeNext",        
    "target": "ES2022",               
    "outDir": "./dist",  
    "rootDir": "./src",                
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types"  
    ]                     
  },
  "include": ["src/**/*.ts"],           
  "exclude": ["node_modules"]
}